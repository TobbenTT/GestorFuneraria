<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/black"
        android:padding="16dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnVolverRespaldo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFD700"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respaldo Manual"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E8F5E9"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="#2E7D32"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Este servicio se guardará directamente en el historial como FINALIZADO ✅."
                        android:textColor="#1B5E20"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos del Fallecido y Lugar"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etDifuntoRespaldo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nombre del Difunto"
                android:inputType="textPersonName"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etLugarRespaldo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Cementerio o Lugar del Servicio"
                android:inputType="textPostalAddress"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal a Cargo"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chofer Principal"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/spinnerChoferRespaldo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etAcompananteRespaldo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nombre del Acompañante (Opcional)"
                android:inputType="textPersonName"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Realizada"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etFechaRespaldo"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Fecha"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:drawable/editbox_background_normal"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/etHoraRespaldo"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Hora"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:drawable/editbox_background_normal"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnGuardarRespaldo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="GUARDAR EN HISTORIAL"
                android:backgroundTint="#2E7D32"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>