<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CrearServicioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">
        <ImageButton
            android:id="@+id/btnVolverAsignar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Asignación"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos del Fallecido"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etDifunto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Nombre completo del difunto"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono Familiar"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="+569..."
                android:inputType="phone"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Lugar de Retiro (Casa/Capilla)"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etRetiro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Dirección donde se busca al fallecido"
                android:inputType="textPostalAddress"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Destino (Cementerio)"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etCementerio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Dirección del cementerio"
                android:inputType="textPostalAddress"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:textColor="#FBC02D"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/etFecha"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:hint="DD/MM/AAAA"
                        android:focusable="false"
                        android:clickable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora"
                        android:textColor="#FBC02D"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/etHora"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:hint="HH:MM"
                        android:focusable="false"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asignar Chofer"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>
            <Spinner
                android:id="@+id/spinnerChoferes"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observaciones"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etObservaciones"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Detalles especiales..."
                android:gravity="top|start"
                android:padding="12dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnConfirmarServicio"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="CONFIRMAR SERVICIO"
                android:backgroundTint="#121212"
                android:textColor="#FBC02D"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>