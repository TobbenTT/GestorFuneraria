<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvDifunto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre Difunto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDIENTE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora"
            android:textColor="#546E7A"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDirecciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ  Retiro: Calle 123\nâœï¸ Destino: Cementerio X"
            android:textColor="#37474F"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnWhatsapp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_call"
                app:tint="#25D366"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnAccionPrincipal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="INICIAR VIAJE"
                android:backgroundTint="#2962FF"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnMapa"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="ðŸ—ºï¸"
                android:backgroundTint="#FFD700"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>