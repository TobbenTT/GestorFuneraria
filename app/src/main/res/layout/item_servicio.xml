<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDifunto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre Difunto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETALLES DEL SERVICIO"
            android:textSize="10sp"
            android:textColor="#999999"
            android:letterSpacing="0.1"/>

        <TextView
            android:id="@+id/tvDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha - Cementerio"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PENDIENTE"
                    android:textStyle="bold"
                    android:textColor="@color/red_error"/>

                <ImageButton
                    android:id="@+id/btnWhatsapp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/stat_sys_phone_call"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#25D366"
                    android:contentDescription="Llamar WhatsApp"/>

                <Button
                    android:id="@+id/btnMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="IR AL MAPA"
                    android:textSize="12sp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/gold"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnFinalizar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="âœ… MARCAR COMO FINALIZADO"
                android:textStyle="bold"
                android:backgroundTint="#00C853"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>